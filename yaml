name: YAML file for RAG

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.8'  # or any version you need

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run your application
        env:
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}  # Access the secret
        run: |
          # Your command to run the FastAPI app or any tests
          python RAGCode.py
